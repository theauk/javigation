<?xml version="1.0" encoding="UTF-8"?>

<?import bfst21.view.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.Scene?>
<?import bfst21.utils.VehicleType?>
<Scene xmlns="https://javafx.com/javafx"
       xmlns:fx="http://javafx.com/fxml"
       fx:controller="bfst21.Controller"
       fx:id="scene"
       stylesheets="view.css"
>
    <BorderPane>
        <prefWidth>
            <View fx:constant="WIDTH"/>
        </prefWidth>
        <prefHeight>
            <View fx:constant="HEIGHT"/>
        </prefHeight>
        <top>
            <MenuBar>
                <Menu text="File">
                    <MenuItem fx:id="openItem" text="Open" onAction="#openFile" accelerator="CTRL + O"/>
                    <SeparatorMenuItem/>
                    <MenuItem fx:id="cancelItem" text="Cancel" onAction="#cancelLoad" accelerator="CTRL + W"/>
                    <SeparatorMenuItem/>
                    <MenuItem text="Exit" onAction="#exit"/>
                </Menu>

                <Menu text="View">
                    <MenuItem fx:id="resetItem" text="Reset" onAction="#resetView" accelerator="CTRL + R"/>
                    <SeparatorMenuItem/>
                    <RadioMenuItem fx:id="showUIItem" text="Show UI" selected="true" accelerator="CTRL + T"/>
                    <RadioMenuItem fx:id="navigationPane" text="Show Navigation Pane" selected="true"/>
                    <SeparatorMenuItem/>
                    <Menu fx:id="themeMenu" text="Change Theme...">
                        <RadioMenuItem text="Default" userData="default.mtheme" selected="true">
                            <toggleGroup>
                                <ToggleGroup fx:id="themeGroup"/>
                            </toggleGroup>
                        </RadioMenuItem>
                        <SeparatorMenuItem/>
                    </Menu>
                    <SeparatorMenuItem/>
                    <MenuItem fx:id="zoomInItem" text="Zoom in" onAction="#zoom" accelerator="CTRL + PLUS"/>
                    <MenuItem fx:id="zoomOutItem" text="Zoom out" onAction="#zoom" accelerator="CTRL + MINUS"/>
                </Menu>

                <Menu text="Debug">
                    <RadioMenuItem fx:id="informationBoard" text="Show Information Board" selected="true"/>
                    <SeparatorMenuItem/>
                    <RadioMenuItem fx:id="rTreeDebug" text="Show R-Tree Debug" onAction="#setRTreeDebug"/>
                    <SeparatorMenuItem/>
                    <fx:define>
                        <ToggleGroup fx:id="typeOfNearestRoad"/>
                    </fx:define>
                    <RadioMenuItem fx:id="kdTreeNearestNode" text="Nearest Road: KD-Tree" toggleGroup="$typeOfNearestRoad"/>
                    <RadioMenuItem fx:id="rTreeNearestNode" text="Nearest Road: R-Tree" selected="true" toggleGroup="$typeOfNearestRoad"/>
                    <SeparatorMenuItem/>
                    <fx:define>
                        <ToggleGroup fx:id="typeOfNavAlgorithm"/>
                    </fx:define>
                    <RadioMenuItem fx:id="aStarNav" text="Use A*" selected="true" toggleGroup="$typeOfNavAlgorithm"/>
                    <RadioMenuItem fx:id="dijkstraNav" text="Use Dijkstra" toggleGroup="$typeOfNavAlgorithm"/>
                    <SeparatorMenuItem/>
                    <MenuItem fx:id="dumpItem" text="Dump MapData" onAction="#dumpBinary" accelerator="CTRL + D"/>
                </Menu>
            </MenuBar>
        </top>
        <center>
            <StackPane fx:id="centerPane">
                <Pane fx:id="mapPane">
                    <MapCanvas fx:id="mapCanvas"
                               width="${mapPane.width}"
                               height="${mapPane.height}"
                               onScroll="#onScroll"
                               onMousePressed="#onMousePressed"
                               onMouseDragged="#onMouseDragged"
                               onMouseMoved="#onMouseMoved"
                               onMouseReleased="#onMouseReleased"
                               onKeyPressed="#onKeyPressed"
                               onKeyReleased="#onKeyReleased"
                    />
                </Pane>

                <AnchorPane id="uiControl" visible="${showUIItem.selected}" pickOnBounds="false">
                    <VBox alignment="CENTER" AnchorPane.rightAnchor="5" AnchorPane.bottomAnchor="20"
                          pickOnBounds="false">
                        <Button fx:id="zoomInButton" text="+" onAction="#zoom"/>
                        <Slider fx:id="zoomSlider" pickOnBounds="false" orientation="VERTICAL">
                            <min>
                                <MapCanvas fx:constant="MIN_ZOOM_LEVEL"/>
                            </min>
                            <max>
                                <MapCanvas fx:constant="MAX_ZOOM_LEVEL"/>
                            </max>
                        </Slider>
                        <Button fx:id="zoomOutButton" text="-" prefWidth="${zoomInButton.width}" onAction="#zoom"/>
                    </VBox>

                    <Label id="copyRight" text="&#169;2021 Group 10" AnchorPane.bottomAnchor="0"
                           AnchorPane.rightAnchor="0" mouseTransparent="true">
                        <padding>
                            <Insets right="5" left="5"/>
                        </padding>
                    </Label>
                    <VBox id="informationPane" visible="${informationBoard.selected}" minWidth="270" minHeight="150"
                          maxWidth="270" maxHeight="150" spacing="5" AnchorPane.topAnchor="5" AnchorPane.rightAnchor="5"
                          mouseTransparent="true">
                        <padding>
                            <Insets top="5" bottom="5" left="5" right="5"/>
                        </padding>
                        <Label fx:id="nearestRoadLabel" text="Nearest Road: N/A"/>
                        <Label fx:id="coordsLabel" text="Coordinates: (0.0, 0.0)"/>
                        <Label fx:id="geoCoordsLabel" text="Geo-coordinates: (0.0, 0.0)"/>
                        <Separator/>
                        <HBox id="boundsPane">
                            <AnchorPane>
                                <Label fx:id="boundsTL" text="(0.0, 0.0)" AnchorPane.topAnchor="0"/>
                                <Label fx:id="boundsBL" text="(0.0, 0.0)" textAlignment="RIGHT" alignment="CENTER_RIGHT"
                                       AnchorPane.bottomAnchor="0"/>
                            </AnchorPane>
                            <HBox id="bounds" minWidth="100" minHeight="60" maxWidth="100" maxHeight="60"
                                  alignment="CENTER">
                                <Label text="Bounds"/>
                            </HBox>
                            <AnchorPane>
                                <Label fx:id="boundsTR" text="(0.0, 0.0)" AnchorPane.topAnchor="0"/>
                                <Label fx:id="boundsBR" text="(0.0, 0.0)" AnchorPane.bottomAnchor="0"/>
                            </AnchorPane>
                        </HBox>
                    </VBox>

                    <HBox id="scalePane" prefWidth="50" prefHeight="5" alignment="CENTER" AnchorPane.leftAnchor="5"
                          AnchorPane.bottomAnchor="5" mouseTransparent="true">
                        <Label fx:id="scaleLabel" text="- - -">
                        </Label>
                    </HBox>
                </AnchorPane>

                <AnchorPane id="navigationControl" visible="${navigationPane.selected}" pickOnBounds="false">
                    <VBox AnchorPane.leftAnchor="5" AnchorPane.topAnchor="5" spacing="5">
                        <HBox>
                            <TextField fx:id="textFieldFromNav" promptText="From" />
                            <Button fx:id="chooseCorButtonFromNav" text="Choose on map" onAction="#getPointNavFrom"/>
                        </HBox>
                            <ScrollPane fx:id="ScrollpaneAutoCompleteFromNav" visible="false" >
                                <VBox fx:id="autoCompleteFromNav" >
                                </VBox>
                            </ScrollPane>
                        <HBox>
                            <TextField fx:id="textFieldToNav" promptText="To" />
                            <Button fx:id="chooseCorButtonToNav" text="Choose on map" onAction="#getPointNavTo"/>
                        </HBox>
                        <ScrollPane fx:id="ScrollpaneAutoCompleteToNav" visible="false" >
                            <VBox fx:id="autoCompleteToNav" >
                            </VBox>
                        </ScrollPane>

                        <GridPane hgap="5" vgap="5">
                            <ToggleButton fx:id="carNavToggleButton" text="Car" GridPane.columnIndex="0">
                                <toggleGroup>
                                    <ToggleGroup fx:id="vehicleNavGroup"/>
                                </toggleGroup>
                                <userData>
                                    <VehicleType fx:constant="CAR"/>
                                </userData>
                            </ToggleButton>

                            <ToggleButton fx:id="bikeNavToggleButton" text="Bike" GridPane.columnIndex="1">
                                <toggleGroup>
                                    <fx:reference source="vehicleNavGroup"/>
                                </toggleGroup>
                                <userData>
                                    <VehicleType fx:constant="BIKE"/>
                                </userData>
                            </ToggleButton>

                            <ToggleButton fx:id="WalkNavToggleButton" text="Walk" GridPane.columnIndex="2">
                                <toggleGroup>
                                    <fx:reference source="vehicleNavGroup"/>
                                </toggleGroup>
                                <userData>
                                    <VehicleType fx:constant="WALK"/>
                                </userData>
                            </ToggleButton>
                        </GridPane>

                        <HBox spacing="5">
                            <RadioButton fx:id="radioButtonShortestNav" text="Shortest">
                                <toggleGroup>
                                    <ToggleGroup fx:id="radioButtonFastestShortestNavGroup"/>
                                </toggleGroup>
                            </RadioButton>

                            <RadioButton fx:id="radioButtonFastestNav" text="Fastest">
                                <toggleGroup>
                                    <fx:reference source="radioButtonFastestShortestNavGroup"/>
                                </toggleGroup>
                            </RadioButton>
                        </HBox>

                        <Button fx:id="searchNav" text="Search" onAction="#searchNav"/>
                        <Label fx:id="distanceAndTimeNav" visible="false"></Label>
                        <Label fx:id="specialPathFeaturesNav" visible="false"></Label>
                        <ScrollPane fx:id="directionsScrollPane" visible="false">
                            <VBox fx:id="directionsBox"></VBox>
                        </ScrollPane>
                        <VBox>
                            <HBox.margin>
                                <Insets right="30.0"/>
                                <Insets bottom="10.0"/>
                            </HBox.margin>
                            <Button fx:id="addPointButton" text="Choose on map to add point" onAction="#addUserPoint"/>
                            <TextField fx:id="textFieldPointName" promptText="Name your point"/>
                            <ComboBox fx:id="dropDownPoints" onAction="#moveToPoint"/>
                        </VBox>
                    </VBox>
                </AnchorPane>

                <VBox fx:id="loaderPane" alignment="CENTER" style="-fx-background-color: rgb(180, 180, 180);">
                    <ProgressIndicator fx:id="loadingBar" progress="0"/>
                    <Label fx:id="statusLabel" text="Waiting"/>
                </VBox>
            </StackPane>
        </center>
    </BorderPane>
</Scene>
