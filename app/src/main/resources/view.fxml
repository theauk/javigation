<?xml version="1.0" encoding="UTF-8"?>

<?import bfst21.utils.VehicleType?>
<?import bfst21.view.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.Scene?>
<?import javafx.scene.text.Font?>
<Scene xmlns="https://javafx.com/javafx"
       xmlns:fx="http://javafx.com/fxml"
       fx:controller="bfst21.Controller"
       fx:id="scene"
       stylesheets="view.css"
>
    <BorderPane>
        <prefWidth>
            <View fx:constant="WIDTH"/>
        </prefWidth>
        <prefHeight>
            <View fx:constant="HEIGHT"/>
        </prefHeight>
        <top>
            <MenuBar>
                <Menu text="File">
                    <MenuItem fx:id="openItem" text="Open" onAction="#openFile" accelerator="CTRL + O"/>
                    <SeparatorMenuItem/>
                    <MenuItem fx:id="cancelItem" text="Cancel" onAction="#cancelLoad" accelerator="CTRL + W"/>
                    <SeparatorMenuItem/>
                    <MenuItem text="Exit" onAction="#exit"/>
                </Menu>

                <Menu text="View">
                    <MenuItem fx:id="resetItem" text="Reset" onAction="#resetView" accelerator="CTRL + R"/>
                    <SeparatorMenuItem/>
                    <RadioMenuItem fx:id="showUIItem" text="Show UI" selected="true" accelerator="CTRL + T"/>
                    <RadioMenuItem fx:id="navigationPane" text="Show Navigation Pane" selected="true"/>
                    <RadioMenuItem fx:id="leftscrollPane" text="show leftside"/>

                    <SeparatorMenuItem/>
                    <Menu fx:id="themeMenu" text="Change Theme...">
                        <RadioMenuItem text="Default" userData="default.mtheme" selected="true">
                            <toggleGroup>
                                <ToggleGroup fx:id="themeGroup"/>
                            </toggleGroup>
                        </RadioMenuItem>
                        <SeparatorMenuItem/>
                    </Menu>
                    <SeparatorMenuItem/>
                    <MenuItem fx:id="zoomInItem" text="Zoom in" onAction="#zoom" accelerator="CTRL + PLUS"/>
                    <MenuItem fx:id="zoomOutItem" text="Zoom out" onAction="#zoom" accelerator="CTRL + MINUS"/>
                </Menu>

                <Menu text="Debug">
                    <RadioMenuItem fx:id="informationBoard" text="Show Information Board" selected="true"/>
                    <SeparatorMenuItem/>
                    <RadioMenuItem fx:id="rTreeDebug" text="Show R-Tree Debug" onAction="#setRTreeDebug"/>
                    <SeparatorMenuItem/>
                    <fx:define>
                        <ToggleGroup fx:id="typeOfNearestRoad"/>
                    </fx:define>
                    <RadioMenuItem fx:id="kdTreeNearestNode" text="Nearest Road: KD-Tree" toggleGroup="$typeOfNearestRoad"/>
                    <RadioMenuItem fx:id="rTreeNearestNode" text="Nearest Road: R-Tree" selected="true" toggleGroup="$typeOfNearestRoad"/>
                    <SeparatorMenuItem/>
                    <fx:define>
                        <ToggleGroup fx:id="typeOfNavAlgorithm"/>
                    </fx:define>
                    <RadioMenuItem fx:id="aStarNav" text="Use A*" selected="true" toggleGroup="$typeOfNavAlgorithm"/>
                    <RadioMenuItem fx:id="dijkstraNav" text="Use Dijkstra" toggleGroup="$typeOfNavAlgorithm"/>
                    <SeparatorMenuItem/>
                    <MenuItem fx:id="dumpItem" text="Dump MapData" onAction="#dumpBinary" accelerator="CTRL + D"/>
                </Menu>
            </MenuBar>
        </top>
        <center>
            <StackPane fx:id="centerPane">
                <fx:define>
                    <ContextMenu fx:id="rightClickMenu" >
                        <items>
                            <MenuItem fx:id="addToYourPoints" text="Add to your points" onAction="#rightClickAddUserPoint"/>
                            <SeparatorMenuItem/>
                            <MenuItem fx:id="routeFromHere" text="Route from here" onAction="#rightClickPointNavFrom"/>
                            <MenuItem fx:id="routeToHere" text="Route to here" onAction="#rightClickPointNavTo"/>
                        </items>
                    </ContextMenu>
                </fx:define>
                <Pane fx:id="mapPane">
                    <MapCanvas fx:id="mapCanvas"
                               width="${mapPane.width}"
                               height="${mapPane.height}"
                               onScroll="#onScroll"
                               onMousePressed="#onMousePressed"
                               onMouseDragged="#onMouseDragged"
                               onMouseMoved="#onMouseMoved"
                               onMouseReleased="#onMouseReleased"
                               onKeyPressed="#onKeyPressed"
                               onKeyReleased="#onKeyReleased"
                               onContextMenuRequested="#setRightClickMenu"
                    />
                </Pane>

                <AnchorPane id="uiControl" visible="${showUIItem.selected}" pickOnBounds="false">
                    <VBox alignment="CENTER" AnchorPane.rightAnchor="5" AnchorPane.bottomAnchor="20" pickOnBounds="false">
                        <Button fx:id="zoomInButton" text="+" onAction="#zoom"/>
                        <Slider fx:id="zoomSlider" pickOnBounds="false" orientation="VERTICAL">
                            <min>
                                <MapCanvas fx:constant="MIN_ZOOM_LEVEL"/>
                            </min>
                            <max>
                                <MapCanvas fx:constant="MAX_ZOOM_LEVEL"/>
                            </max>
                        </Slider>
                        <Button fx:id="zoomOutButton" text="-" prefWidth="${zoomInButton.width}" onAction="#zoom"/>
                    </VBox>

                    <HBox id="bottomBarPane" AnchorPane.bottomAnchor="0" AnchorPane.rightAnchor="0" mouseTransparent="true">
                        <Label fx:id="nearestRoadLabel" text="Nearest Road: N/A" prefWidth="230" maxWidth="230" minWidth="50"/>
                        <Separator orientation="VERTICAL"/>
                        <Label text="&#169;2021 Group 10"/>
                    </HBox>

                    <VBox id="informationPane" visible="${informationBoard.selected}" minWidth="270" minHeight="150"
                          maxWidth="270" maxHeight="150" spacing="5" AnchorPane.topAnchor="5" AnchorPane.rightAnchor="5"
                          mouseTransparent="true">
                        <padding>
                            <Insets top="5" bottom="5" left="5" right="5"/>
                        </padding>
                        <Label fx:id="coordsLabel" text="Coordinates: (0.0, 0.0)"/>
                        <Label fx:id="geoCoordsLabel" text="Geo-coordinates: (0.0, 0.0)"/>
                        <Separator/>
                        <HBox id="boundsPane">
                            <AnchorPane>
                                <Label fx:id="boundsTL" text="(0.0, 0.0)" AnchorPane.topAnchor="0"/>
                                <Label fx:id="boundsBL" text="(0.0, 0.0)" textAlignment="RIGHT" alignment="CENTER_RIGHT"
                                       AnchorPane.bottomAnchor="0"/>
                            </AnchorPane>
                            <HBox id="bounds" minWidth="100" minHeight="60" maxWidth="100" maxHeight="60"
                                  alignment="CENTER">
                                <Label text="Bounds"/>
                            </HBox>
                            <AnchorPane>
                                <Label fx:id="boundsTR" text="(0.0, 0.0)" AnchorPane.topAnchor="0"/>
                                <Label fx:id="boundsBR" text="(0.0, 0.0)" AnchorPane.bottomAnchor="0"/>
                            </AnchorPane>
                        </HBox>
                    </VBox>

                    <HBox id="scalePane" prefWidth="50" prefHeight="5" alignment="CENTER" AnchorPane.leftAnchor="5"
                          AnchorPane.bottomAnchor="5" mouseTransparent="true">
                        <Label fx:id="scaleLabel" text="- - -">
                        </Label>
                    </HBox>
                </AnchorPane>

                <VBox fx:id="loaderPane" alignment="CENTER" style="-fx-background-color: rgb(180, 180, 180);">
                    <ProgressIndicator fx:id="loadingBar" progress="0"/>
                    <Label fx:id="statusLabel" text="Waiting"/>
                </VBox>
            </StackPane>
        </center>

        <left>
            <AnchorPane prefHeight="630.0" prefWidth="254.0" BorderPane.alignment="CENTER">
                <children>
                    <AnchorPane fx:id="address_myPlacesPane" prefHeight="630.0" prefWidth="254.0" managed="${address_myPlacesPane.visible}" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                        <children>
                            <GridPane layoutX="16.0" layoutY="42.0" prefHeight="95.0" prefWidth="225.0">
                                <columnConstraints>
                                    <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                                </columnConstraints>
                                <rowConstraints>
                                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                </rowConstraints>
                                <children>
                                    <HBox fx:id="searchForAddressHBox" prefHeight="66.0" prefWidth="182.0" spacing="5.0" GridPane.rowIndex="1">
                                        <children>
                                            <AutoFillTextField fx:id="addressSearchTextField" prefHeight="33.0" prefWidth="119.0" promptText="Search" maxEntries="10">
                                                <padding>
                                                    <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                                                </padding>
                                            </AutoFillTextField>
                                            <Button fx:id="searchForAddress" mnemonicParsing="false" prefHeight="32.0" prefWidth="59.0"/>
                                            <Button fx:id="directionsButton"  mnemonicParsing="false" prefHeight="32.0" prefWidth="59.0"/>
                                        </children>
                                        <padding>
                                            <Insets bottom="20.0" left="5.0" top="10.0" />
                                        </padding>
                                    </HBox>
                                    <Label prefHeight="29.0" prefWidth="147.0" text="Search for an address">
                                        <font>
                                            <Font name="System Bold" size="14.0" />
                                        </font>
                                        <GridPane.margin>
                                            <Insets bottom="10.0" />
                                        </GridPane.margin>
                                        <padding>
                                            <Insets left="5.0" />
                                        </padding>
                                    </Label>
                                </children>
                            </GridPane>
                            <Separator layoutX="3.0" layoutY="313.0" prefHeight="5.0" prefWidth="256.0" />
                            <AnchorPane layoutY="316.0" prefHeight="314.0" prefWidth="260.0">
                                    <children>
                                        <Label layoutX="17.0" layoutY="4.0" prefHeight="25.0" prefWidth="75.0" text="My places">
                                                <font>
                                                    <Font name="System Bold" size="14.0"/>
                                                </font></Label>
                                        <GridPane layoutX="18.0" layoutY="34.0" prefHeight="42.0" prefWidth="177.0">
                                            <columnConstraints>
                                                <ColumnConstraints hgrow="SOMETIMES" maxWidth="104.00000610351563" minWidth="10.0" prefWidth="100.0" />
                                                <ColumnConstraints hgrow="SOMETIMES" maxWidth="135.20001220703125" minWidth="10.0" prefWidth="100.0" />
                                            </columnConstraints>
                                            <rowConstraints>
                                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                            </rowConstraints>
                                            <children>
                                                <Button mnemonicParsing="false" prefHeight="25.0" prefWidth="59.0" text="Add" onAction="#addUserPoint">
                                                    <GridPane.margin>
                                                        <Insets />
                                                    </GridPane.margin>
                                                </Button>
                                                <Button mnemonicParsing="false" prefHeight="25.0" prefWidth="61.0" text="Delete" GridPane.columnIndex="1" onAction="#deleteUserPoint">
                                                    <GridPane.margin>
                                                        <Insets />
                                                    </GridPane.margin>
                                                </Button>
                                            </children>
                                        </GridPane>

                            <AnchorPane layoutX="14.0" layoutY="85.0" prefHeight="219.0" prefWidth="229.0">
                                <children>
                                    <ListView fx:id="myPlacesListView" prefHeight="217.0" prefWidth="236.0" />
                                </children>
                            </AnchorPane>
                        </children>
                    </AnchorPane>
                        </children>
                    </AnchorPane>

                    <!-- the second left pane -->

                    <AnchorPane fx:id="navigationLeftPane" prefHeight="630.0" prefWidth="254.0" visible="false" managed="${navigationLeftPane.visible}">
                        <children>
                        <Button fx:id="backButton" layoutX="199.5" layoutY="7.0" mnemonicParsing="false"/>
                        <GridPane layoutX="17.0" layoutY="44.0" prefHeight="169.0" prefWidth="231.0">
                            <columnConstraints>
                                <ColumnConstraints hgrow="SOMETIMES" maxWidth="159.2" minWidth="10.0" prefWidth="151.2" />
                                <ColumnConstraints hgrow="SOMETIMES" maxWidth="96.60" minWidth="10.0" prefWidth="80.0" />
                            </columnConstraints>
                            <rowConstraints>
                                <RowConstraints maxHeight="50.0" minHeight="10.0" prefHeight="40" vgrow="SOMETIMES" />
                                <RowConstraints minHeight="10.0" prefHeight="30.0" maxHeight="30.0" vgrow="SOMETIMES" />
                                <RowConstraints maxHeight="18.0" minHeight="5.0" prefHeight="6.0" vgrow="SOMETIMES" />
                                <RowConstraints minHeight="10.0" prefHeight="30.0" maxHeight="30.0" vgrow="SOMETIMES" />
                                <RowConstraints minHeight="20.0" prefHeight="30.0" maxHeight="30.0" vgrow="SOMETIMES" />
                            </rowConstraints>
                            <children>
                                <HBox prefHeight="54.0" prefWidth="62.0" spacing="12.0">
                                    <children>
                                        <ToggleButton fx:id="carNavToggleButton" prefHeight="${bikeNavToggleButton.height}">
                                            <toggleGroup>
                                                <ToggleGroup fx:id="vehicleNavGroup"/>
                                            </toggleGroup>
                                            <userData>
                                                <VehicleType fx:constant="CAR"/>
                                            </userData>
                                        </ToggleButton>
                                        <ToggleButton fx:id="bikeNavToggleButton">
                                            <toggleGroup>
                                                <fx:reference source="vehicleNavGroup"/>
                                            </toggleGroup>
                                            <userData>
                                                <VehicleType fx:constant="BIKE"/>
                                            </userData>
                                        </ToggleButton>
                                        <ToggleButton fx:id="WalkNavToggleButton">
                                            <toggleGroup>
                                                <fx:reference source="vehicleNavGroup"/>
                                            </toggleGroup>
                                            <userData>
                                                <VehicleType fx:constant="WALK"/>
                                            </userData>
                                        </ToggleButton>
                                    </children>
                                </HBox>
                                <AutoFillTextField fx:id="textFieldFromNav" promptText="From" maxEntries="10" maxHeight="30.0" GridPane.rowIndex="3">
                                    <padding>
                                        <Insets left="5.0" right="5.0" />
                                    </padding>
                                </AutoFillTextField>
                                <Button mnemonicParsing="false" fx:id="searchNav" onAction="#searchNav" maxHeight="30.0" GridPane.columnIndex="1" GridPane.rowIndex="3">
                                    <GridPane.margin>
                                        <Insets left="20.0" />
                                    </GridPane.margin>
                                </Button>

                                <AutoFillTextField fx:id="textFieldToNav" promptText="To" maxEntries="10" maxHeight="30.0" GridPane.rowIndex="1">
                                    <padding>
                                        <Insets left="5.0" right="5.0" />
                                    </padding>
                                </AutoFillTextField>
                                <Button mnemonicParsing="false" fx:id="switchButton" maxHeight="30.0" GridPane.columnIndex="1" GridPane.rowIndex="1">
                                    <GridPane.margin>
                                        <Insets left="20.0" />
                                    </GridPane.margin>
                                </Button>
                                <HBox prefHeight="100.0" prefWidth="200.0" spacing="25.0" GridPane.rowIndex="4">
                                    <children>
                                        <RadioButton fx:id="radioButtonShortestNav" text="Shortest">
                                            <toggleGroup>
                                                <ToggleGroup fx:id="radioButtonFastestShortestNavGroup"/>
                                            </toggleGroup>
                                        </RadioButton>

                                        <RadioButton fx:id="radioButtonFastestNav" text="Fastest">
                                            <toggleGroup>
                                                <fx:reference source="radioButtonFastestShortestNavGroup"/>
                                            </toggleGroup>
                                        </RadioButton>
                                    </children>
                                    <GridPane.margin>
                                        <Insets top="10.0" />
                                    </GridPane.margin>
                                </HBox>
                            </children>
                        </GridPane>
                            <Separator layoutX="4.0" layoutY="218.0" prefHeight="1.0" prefWidth="252.0" />

                            <AnchorPane layoutX="8.0" layoutY="222.0" prefHeight="406.0" prefWidth="250.0">
                                <children>
                                    <VBox fx:id="routeTime" layoutX="11.0" layoutY="14.0" prefHeight="110.0" prefWidth="224.0" spacing="5.0">
                                        <children>
                                            <Label fx:id="distanceNav" visible="false"></Label>
                                            <Label fx:id="timeNav" visible="false"></Label>
                                            <Label fx:id="specialPathFeaturesNav" visible="false"></Label>
                                        </children>
                                    </VBox>
                                    <AnchorPane layoutX="13.0" layoutY="140.0" prefHeight="254.0" prefWidth="220.0">
                                        <children>
                                            <ListView fx:id="directionsList" layoutY="6.0" prefHeight="254.4" prefWidth="220.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" />
                                        </children>
                                    </AnchorPane>
                                </children>
                            </AnchorPane>
                        </children>
                    </AnchorPane>
                </children>
            </AnchorPane>
           </left>
       </BorderPane>
   </Scene>
