<?xml version="1.0" encoding="UTF-8"?>

<?import bfst21.view.MapCanvas?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.Scene?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<Scene xmlns="http://javafx.com/javafx"
       xmlns:fx="http://javafx.com/fxml"
       fx:controller="bfst21.Controller"
       fx:id="scene"
>
    <root>
        <BorderPane prefWidth="680" prefHeight="520">
            <top>
                <MenuBar>
                    <Menu text="File">
                        <MenuItem text="Open" onAction="#openFile" accelerator="CTRL + O"/>
                        <SeparatorMenuItem/>
                        <MenuItem text="Cancel" onAction="#cancelLoad" accelerator="CTRL + W"/>
                        <SeparatorMenuItem/>
                        <MenuItem text="Exit" onAction="#exit"/>
                    </Menu>
                    <Menu text="View">
                        <MenuItem fx:id="resetItem" text="Reset" onAction="#resetView" accelerator="CTRL + R"/>
                        <SeparatorMenuItem/>
                        <Menu fx:id="themeMenu" text="Change Theme...">
                            <RadioMenuItem fx:id="defaultThemeItem" text="Default" selected="true">
                                <toggleGroup>
                                    <ToggleGroup fx:id="themeGroup"/>
                                </toggleGroup>
                            </RadioMenuItem>
                            <SeparatorMenuItem/>
                        </Menu>
                        <SeparatorMenuItem/>
                        <MenuItem fx:id="zoomInItem" text="Zoom in" onAction="#zoom" accelerator="CTRL + PLUS"/>
                        <MenuItem fx:id="zoomOutItem" text="Zoom out" onAction="#zoom" accelerator="CTRL + MINUS"/>
                    </Menu>
                    <Menu text="Debug">
                        <RadioMenuItem fx:id="rTreeDebug" text="R-tree" onAction="#setRTreeDebug"/>
                    </Menu>
                </MenuBar>
            </top>
            <center>
                <StackPane fx:id="centerPane">
                    <Pane fx:id="mapPane">
                        <MapCanvas fx:id="mapCanvas"
                                   width="${mapPane.width}"
                                   height="${mapPane.height}"
                                   onScroll="#onScroll"
                                   onMousePressed="#onMousePressed"
                                   onMouseDragged="#onMouseDragged"
                                   onMouseMoved="#onMouseMoved"
                                   onMouseReleased="#onMouseReleased"
                        />
                    </Pane>
                    <VBox fx:id="loaderPane" alignment="CENTER" style="-fx-background-color: rgb(180, 180, 180);">
                        <ProgressIndicator fx:id="loadingBar" progress="0"/>
                        <Label fx:id="statusLabel" text="Waiting"/>
                    </VBox>
                </StackPane>
            </center>
            <bottom>
                <HBox alignment="CENTER_RIGHT">
                    <Label fx:id="boundsLabel" style="-fx-padding: 5;"/>
                    <Label fx:id="coordsLabel" text="CanvasCoords: 0.0, 0.0" style="-fx-padding: 5;"/>
                    <Label fx:id="geoCoordsLabel" text="GeoCoords: 0.0, 0.0" style="-fx-padding: 5;"/>
                    <Slider fx:id="zoomSlider" showTickLabels="true" showTickMarks="true"/>
                </HBox>
            </bottom>
        </BorderPane>
    </root>
</Scene>
